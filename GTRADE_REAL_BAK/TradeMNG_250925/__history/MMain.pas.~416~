procedure TfmMain.tmInOutTimer(Sender: TObject);
var
	iCnt: Integer;
	sSQL: String;
begin
  tmInOut.Enabled := False;

	sSql := Format('SELECT COUNT(1) AS CNT FROM INOUT WHERE RSLT_TP = %s', [QuotedStr('0')]);
  Uni_Open(dbSQL, sSql);

  with dbSQL do
  begin
  	iCnt := FieldByName('CNT').AsInteger;

    if iCnt > 0 then
    	Noti_Show(NowDateMSecTime, '입출금요청', Format('미처리된 입출금내역이 ( %d ) 건이 있습니다.', [iCnt]), 'fmInOut', __Corp_NM, ExtractFilePath(ParamStr(0)) + 'SOUND\입출금.wav', rgNoti.ItemIndex+1, chRetry.Checked);

		Close;      
  end;

	tmInOut.Enabled := True;
end;

function TfmMain.Check_FormCreate(sFormName: String): Boolean;
var
  i: Integer;
begin
  Result := False;

  for i := 0 to Screen.FormCount - 1 do
  begin
    if Screen.Forms[i].Name = sFormName then
    begin
      Result := True;
      Break;
    end;
  end;
end;

procedure TfmMain.chInOutRetryClick(Sender: TObject);
begin
  tmInOut.Enabled := chInOutRetry.Checked;
end;

procedure TfmMain.WndProc(var Message: TMessage);
var
  NC001 : TNC001;
  NC002 : TNC002;
  NC003 : TNC003;
  NL002 : TNL002;
  NB001 : TNB001;
  sPacket, sData, sTm, sMsg, sIOTP, sWav: String;
begin
  inherited;
  if Message.Msg = WM_USER_NOTI_DATA then                                       // Real Packet
	begin
    sPacket := PChar(Message.LParam);
    sData   := PChar(Message.WParam);

    if sPacket = 'NC001' then
    begin
      StrToRecord(sData, NC001, SizeOf(NC001));
      sTm := ArrToStr(NC001.GT_HEADER.TM);
      sIOTP := ArrToStr(NC001.IO_TP);

      sWav := '입출금.wav';

      if sIOTP = '1' then sWav := '입금통보.wav'
      else if sIOTP = '2' then sWav := '출금통보.wav';
      

      Noti_Show(sTm, '입출금요청', ArrToStr(NC001.NOTI_MSG), 'fmInOut', __Corp_NM, ExtractFilePath(ParamStr(0)) + 'SOUND\'+ sWav, rgNoti.ItemIndex+1, chRetry.Checked);
    end
    else if sPacket = 'NC002' then
    begin
      StrToRecord(sData, NC002, SizeOf(NC002));
      sTm := ArrToStr(NC002.GT_HEADER.TM);
      Noti_Show(sTm, '오버나잇신청', ArrToStr(NC002.NOTI_MSG), 'fmOverNgt_Req', __Corp_NM, ExtractFilePath(ParamStr(0)) +'SOUND\오버나잇신청.wav', rgNoti.ItemIndex+1, chRetry.Checked);
    end
    else if sPacket = 'NC003' then                                              // 신규회원가입
    begin
      StrToRecord(sData, NC003, SizeOf(NC003));
      sTm := ArrToStr(NC003.GT_HEADER.TM);
      Noti_Show(sTm, ArrToStr(NC003.NOTI_TITLE), ArrToStr(NC003.NOTI_MSG), 'fmUser', __Corp_NM, ExtractFilePath(ParamStr(0)) +'SOUND\회원가입.wav', rgNoti.ItemIndex+1, chRetry.Checked);
    end
    else if sPacket = 'NL002' then                                              // 로스컷통보
    begin
      StrToRecord(sData, NL002, SizeOf(NL002));
      sTm  := ArrToStr(NL002.GTN_HEADER.GT_HEADER.TM);
    	sMsg := Format('[ %s ] 님께서 로스컷 되었습니다.', [ArrToStr(NL002.GTN_HEADER.GT_HEADER.USER_ID)]);

    	Noti_Show(sTm, '로스컷 통보', sMsg, '', __Corp_NM, ExtractFilePath(ParamStr(0)) +'SOUND\로스컷.wav', rgNoti.ItemIndex+1, chRetry.Checked);
    end
    else if sPacket = 'NB001' then
    begin
      StrToRecord(sData, NB001, SizeOf(NB001));

      if ArrToStr(NB001.NOTI_TP) = '01' then sMsg := '주문/체결처리 오류'
      else if ArrToStr(NB001.NOTI_TP) = '02' then sMsg := '사용자전환 통보'
      else if ArrToStr(NB001.NOTI_TP) = '03' then sMsg := '주문거부 통보';

      sTm  := ArrToStr(NB001.GT_HEADER.TM);
      Noti_Show(sTm, sMsg, ArrToStr(NB001.NOTI_MSG), '', __Corp_NM, '', rgNoti.ItemIndex+1, chRetry.Checked);
    end;
  end
  else if Message.Msg = WM_USER_NOTI_RESULT then
  begin
    if PChar(Message.WParam) = 'fmInOut' then
    begin
      if Not Check_FormCreate('fmInOut') then Form_Create(TfmInOut , fmInOut, 3)
      else
      begin
        with fmInOut do
        begin
          Show;
          TbsSkinSpeedButton(FindComponent('btnFilter')).ButtonClick;
        end;
      end;
    end
    else if PChar(Message.WParam) = 'fmOverNgt_Req' then
    begin
      if Not Check_FormCreate('fmOverNgt_Req') then Form_Create(TfmOverNgt_Req , fmOverNgt_Req, 3)
      else
      begin
        with fmOverNgt_Req do
        begin
          Show;
          TbsSkinSpeedButton(FindComponent('btnFilter')).ButtonClick;
        end;
      end;
    end
    else if PChar(Message.WParam) = 'fmUser' then
    begin
      if Not Check_FormCreate('fmUser') then Form_Create(TfmUser , fmUser, 3)
      else
      begin
        with fmUser do
        begin
          Show;
//          TbsSkinSpeedButton(FindComponent('btnFilter')).ButtonClick;
        end;
      end;
    end
    else if PChar(Message.WParam) = 'fmHybrid' then
    begin
      if Not Check_FormCreate('fmHybrid') then Form_Create(TfmHybrid , fmHybrid, 3)
      else
      begin
        with fmHybrid do
        begin
          Show;
          TbsSkinSpeedButton(FindComponent('btnFilter')).ButtonClick;
        end;
      end;
    end;

  end;
end;

function TfmMain.bsMsgYesNo(sMsg: String; sTitle: String='확인'): Boolean;
begin
  sMsg := StrReplace(sMsg, '\n', #13#10);
  Result := bsSkinMessage.MessageDlg2( sMsg, sTitle, mtConfirmation, [mbYes, mbNo], 0) = mrYes;
end;

end.
