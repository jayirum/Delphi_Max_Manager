end;

procedure TfmUserPL.chADClick(Sender: TObject);
begin
  with gdMain do
  begin
  	Columns[GD_AD_CLR_PL].Visible := chAD.Checked;
  	Columns[GD_AD_CMSN].Visible   := chAD.Checked;
  end;
end;

